{
  "manifest_version": 2,
  "name": "Simple Dark Mode",
  "version": "1.0",
  "description": "A lightweight dark mode extension with dark backgrounds and light text",
  "permissions": [
    "storage",
    "<all_urls>",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["darkmode.css"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Toggle Dark Mode"
  },
  "web_accessible_resources": [
    "darkmode.css"
  ]
}
